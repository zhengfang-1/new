@model CourseManager.Models.Classes

@{
    ViewBag.Title = "Create";
    var teachers = (List<CourseManager.Models.Teachers>)ViewBag.Teachers;
}

<h2>Create</h2>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Classes</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-lable col-md-2"})
        </div>
        <div class="editor-field col-md-10">
            @Html.TextBoxFor(model => model.Name, new {@class = "form-control"})
            @Html.ValidationMessageFor(model => model.Name)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.TeacherId, htmlAttributes: new { @class = "control-lable col-md-2"})
        </div>
        <div class="editor-field col-md-10">
            <select name="TeacherId" class="editor-field form-control">
                @foreach (var teacher in teachers)
                { 
                    <option value="@teacher.Id">@teacher.Name</option>
                }
            </select>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create"  class="btn btn-default"/>
            </div>
        </div>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
